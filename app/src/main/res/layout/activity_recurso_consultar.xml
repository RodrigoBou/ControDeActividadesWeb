<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecursoConsultarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/IdRecurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_RECURSO"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/editIdRecurso"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:ems="10">
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/IdCatRecurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_CAT_RECURSO"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/editIdCatRecurso"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:ems="10">
            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/button0"
        android:text="@string/valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="limpiarTextoRecurso" />


    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="consultarRecursoPHP"
            android:text="@string/ConsularReverva" />

    </LinearLayout>
    <TextView
        android:text="@string/NOMRECURSO"
        android:id="@+id/textViewNombre"
        android:layout_width="330dp"
        android:layout_height="47dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:text="@string/DETALLERECURSO"
        android:id="@+id/textViewDetalle"
        android:layout_width="330dp"
        android:layout_height="47dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:text="@string/ESTADO"
        android:id="@+id/textViewEstado"
        android:layout_width="330dp"
        android:layout_height="47dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:textStyle="bold" />
</LinearLayout>