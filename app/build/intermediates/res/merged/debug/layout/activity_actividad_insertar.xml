<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Agregar Actividad"
        android:textColor="@color/colorAccent"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/editID_ACTIVIDAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID De Actividad"
        android:inputType="number"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/editCOD_DOCENTE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codigo del docente"
        android:inputType="text"
        android:paddingTop="20dp" />
    <EditText
        android:id="@+id/editNOM_ACTIVIDAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Actividad"
        android:inputType="text"
        android:paddingTop="20dp" />
    <EditText
        android:id="@+id/editDETALLE_ACTIVIDAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detalle de la actividad"
        android:inputType="text"
        android:paddingTop="20dp" />
    <EditText
        android:id="@+id/editFECHA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2016-01-01"
        android:inputType="text"
        android:paddingTop="20dp" />
    <EditText
        android:id="@+id/editHORA_INI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="00:00:00"
        android:inputType="text"
        android:paddingTop="20dp" />
    <EditText
        android:id="@+id/editHORA_FIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="00:00:00"
        android:inputType="text"
        android:paddingTop="20dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Insertar"
            android:onClick="insertarActividad"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="limpiarTextoReserva"
            android:text="Limpiar"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>


</LinearLayout>
